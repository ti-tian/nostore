{
  "name": "nostore",
  "version": "0.0.1",
  "description": "Global state management based on React Hooks",
  "main": "lib/index.js",
  "repository": "git@github.com:ti-tian/nostore.git",
  "author": "titian",
  "license": "MIT",
  "private": false,
  "types": "types/index.d.ts",
  "keywords": [
    "react",
    "state management",
    "store",
    "react hooks"
  ],
  "scripts": {
    "dev": "jest --watchAll",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint --ext .ts,.tsx .",
    "lint-staged": "lint-staged",
    "clean": "cross-env rimraf lib && cross-env rimraf es && cross-env rimraf types",
    "build": "npm run clean && npm run build:cjs && npm run build:es && npm run build:types",
    "build:types:cjs": "cross-env tsc --emitDeclarationOnly -d --outDir lib --skipLibCheck --project ./tsconfig.json",
    "build:types:es": "cross-env tsc --emitDeclarationOnly -d --outDir es --skipLibCheck --project ./tsconfig.json",
    "build:cjs": "cross-env BABEL_ENV=cjs babel --root-mode upward src -d lib --ignore **/*.test.ts,**/*.test.tsx --extensions \".ts,.tsx\" ",
    "build:es": "cross-env BABEL_ENV=es babel --root-mode upward src -d es --ignore **/*.test.ts,**/*.test.tsx --extensions \".ts,.tsx\" ",
    "build:types": "cross-env tsc --emitDeclarationOnly -d --types --outDir types"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.0.22",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-alloy": "^3.1.0",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.11.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "npm run lint"
    ]
  },
  "files": [
    "lib",
    "es",
    "types"
  ]
}
